@page
@model UptimeMonitor.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="card">
  <div class="card-body mx-2 d-flex flex-column gap-2">
    <div class="row">
      <div class="col">
        <label class="form-label" asp-for="Input.Firstname">Firstname</label>
        <input asp-for="Input.Firstname" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Firstname" class="text-danger"></span>
      </div>
      <div class="col">
        <label class="form-label" asp-for="Input.Lastname">Lastname</label>
        <input asp-for="Input.Lastname" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Lastname" class="text-danger"></span>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label class="form-label" asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label class="form-label" asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div class="col">
        <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
      </div>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
  </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
