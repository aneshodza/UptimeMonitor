@model UptimeMonitor.Models.ScheduledCheck
@{
ViewData["Title"] = "Create Check";
}

<h1>Create a Scheduled Check</h1>

<form asp-action="Create" method="post" class="card">
  <div class="card-body">
    <div class="mb-3">
      <label asp-for="Domain" class="form-label">Domain</label>
      <input type="text" asp-for="Domain" class="form-control" />
      <span asp-validation-for="Domain" class="text-danger"></span>
    </div>
  </div>

  <div class="card-footer">
    <div class="d-flex gap-2">
      <a class="btn btn-danger" asp-area="" asp-controller="ScheduledChecks" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Back
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa-solid fa-check"></i>
        Create
      </button>
    </div>
  </div>
</form>
