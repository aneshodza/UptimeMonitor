@model List<UptimeMonitor.Models.ScheduledCheck>

<div class="list-group">
  @if (Model.Count == 0)
  {
    <div class="list-group-item list-group-item-action">
      No scheduled checks found.
    </div>
  }
  else
  {
    foreach (var check in Model)
    {
      <div class="list-group-item list-group-item-action">
        <div class="d-flex justify-content-between align-items-center">
          @check.Domain
          <form asp-area="" asp-controller="ScheduledChecks" asp-action="Delete" asp-route-id="@check.Id" method="post" class="m-0">
            <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i>
              </button>
          </form>
        </div>
      </div>
    }
  }
</div>
