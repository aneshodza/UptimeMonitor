@model List<UptimeMonitor.Models.Group>

<h1>Your Groups</h1>

<div class="list-group mb-2">
  @if (Model.Count == 0)
  {
    <div class="list-group-item list-group-item-action">
      You aren't part of any groups currently
    </div>
  }
  else
  {
    foreach (var group in Model)
    {
      <div class="list-group-item list-group-item-action">
        <a class="d-flex justify-content-between align-items-center w-100" asp-controller="Groups" asp-action="Show" asp-route-id="@group.Id">
          @group.GroupName
        </a>
      </div>
    }
  }
</div>
<a class="btn btn-primary" asp-area="" asp-controller="Groups" asp-action="Create">
  <i class="fa-solid fa-plus"></i>
  New
</a>
<a class="btn btn-primary" asp-area="" asp-controller="Groups" asp-action="Join">
  <i class="fa-solid fa-right-to-bracket"></i>
  Join
</a>
