@model UptimeMonitor.Models.Group
@{
  ViewData["Title"] = "Join Group";
}

<h1>Join a new group</h1>

<form asp-action="Join" method="post" class="card">
  <div class="card-body">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
      <label asp-for="GroupCode" class="form-label">Group Code</label>
      <input type="text" asp-for="GroupCode" class="form-control" />
      <span asp-validation-for="GroupCode" class="text-danger"></span>
    </div>
  </div>

  <div class="card-footer">
    <div class="d-flex gap-2">
      <a class="btn btn-danger" asp-area="" asp-controller="Groups" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Back
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa-solid fa-check"></i>
        Join
      </button>
    </div>
  </div>
</form>
